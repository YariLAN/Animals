<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF201E28"
        tools:context=".MainActivity">
    <Button
            android:layout_width="137dp"
            android:layout_height="67dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:text="Добавить карточку" android:backgroundTint="#9591EF" android:id="@+id/add_animal"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="Жми"
            android:layout_width="115dp"
            android:layout_height="62dp" android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="#FDFBFB" android:backgroundTint="#9591EF" app:layout_constraintVertical_bias="0.693"/>
    <Button
            android:text="Список животных"
            android:layout_width="137dp"
            android:layout_height="67dp" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="#FDFBFB" android:backgroundTint="#9591EF" app:layout_constraintVertical_bias="0.441"
            android:textSize="12sp"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="44dp" app:srcCompat="@drawable/vector" android:id="@+id/image_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintVertical_bias="0.039"/>
</androidx.constraintlayout.widget.ConstraintLayout>